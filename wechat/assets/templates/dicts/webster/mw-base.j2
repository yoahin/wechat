{% import 'notes.html' as nc %}

{% macro mw_dict(word) %}
	<!-- Frame for Webster -->
	<section class="mw-frame">
		<!-- header, fixed position -->
		<section class="mw-header">
			<!-- header frame to hold brand -->
			<section class="mw-header-frame">
				<section class="mw-logo">
          {% include 'icons/dict-mw-brand.html' %}
				</section>
				
				<section class="mw-history">
					<span class="since1828-text">since</span>
					<span class="since1828-num">1828</span>
				</section>
			</section>
		</section>

		<!-- content; scrollable  -->
		<section class="mw-entry-content">
			<!-- headword and pos -->
			<section class="mw-headword-frame">
				<span class="mw-headword">
					{{ word['entry'] }}
				</span>
				<span class="mw-pos">
					{{ word['pos'] }}
				</span>
			</section>

			<!-- pronounciation  -->
      <section class="mw-pro-frame">
        {% if word['syllables'] %}
				<span class="mw-syllables">
					{{ word['syllables'] }}
				</span>
				<span class="mw-pro-style-break">|</span>
        {% endif %}
				<span class="mw-pro-first-slash">\</span>
				<span class="mw-pro">
						 {{ word['pro'] }}
				</span>
				<span class="mw-audio-icon">
				{% include 'icons/mw-audio.html' %}
				</span>
        {% if word['pro2'] }}
				<span class="mw-pro-punct">,</span>
				<span class="mw-pro"> ˈpe-lə-ˌtän</span>
        {% endif %}
				<span class="mw-pro-last-slash">\</span>
			</section>

			<!-- webster definition -->
			<section class="mw-def-frame">
				<p class="mw-def-header">
					Definition of
					<em>{{ word['entry'] }}</em>
				</p>
				<p class="mw-def">
						<strong>:</strong>
					{{ word['def'] }}
				</p>
			</section>

			<!-- example -->
			<section class="mw-example-fram">
				<section class="mw-example-1s">
					<p class="mw-1s-header">
						Examples of <em>{{ word['entry'] }}</em> in a Sentence
					</p>
					<p class="mw-1s-content">
						<strong>//</strong> {{ word['example-1s'] }}
					</p>
          {% if word['recent'] %}
					<!-- separate two example sections -->
					<section class="mw-example-hr">
					</section>
					<p class="mw-recent-example-header">
						Recent Examples on the Web
					</p>
          {% for example in word['recent'] %}
					<p class="mw-recent-example-content">
						<strong>//</strong> {{ example['sentence'] }}
					</p>
					<p class="mw-recent-example-source">
						— {{ example['source'] }}
					</p>
          {% endfor %}
          {% endif %}
				</section>
			</section>

			<!-- did you know -->
			<section class="did-you-know">
				<p class="did-you-know-header">
					Did you know?
				</p>
				<p class="did-you-know-content">
				{{ word['did-you-know'] }}	
				</p>
			</section>

			<!-- first use -->
			<section class="mw-1st-use">
				<p class="mw-1st-use-header">
					First Known Use of <em>{{ word['entry'] }}</em>
				</p>
				<p class="mw-1st-use-content">
					{{ word['1st-use'] }}
				</p>
			</section>

			<!-- etymology -->
			<section class="mw-etymology">
				<p class="mw-etymology-header">
					History and Etymology for <em>{{ word['entry'] }}</em>
				</p>
				<p class="mw-etymology-content">
					{{ word['etymology'] }}
				</p>
			</section>


		</section>
	</section>
{% endmacro %}
