  <!-- entry -->  
  {% macro oxford_dict(word)%}
  <section class="oald-entry">
  	<!-- headword -->
		<section class="oald-entry-word">
      <section class="oald-headword">
        <span>{{ word['entry'] }}</span>
			</section>
      <section class="oald-pos">
        <span>{{ word['pos'] }}</span>
      </section>
		</section>

		<!-- pronounciation -->
		<section class="oald-phonetics">
			{% include 'icons/dict-oald-phonetic.html' %}
			<section>
  			<span>{{ word['pro'] }}</span>  
			</section>
		</section>

		<!-- sense  -->
		<section class="oald-sense">
			{% if word['sense-num'] %}
  		<section class="oald-sense-num">
  			<span>{{ word['sense-num'] }}</span>
  		</section>
  		{% endif %}

  		<section class="oald-sense-specs">
  			<!-- oald-def-gram: to align def and syn sections -->
  			{# <section class="oald-def-specs"> #}
  				{% if word['sense-stop'] %}
  				<!-- optional sensetop -->
  				<span class="oald-sensetop">
  						{{ word['sense-stop'] }}
  				</span>
  				{% endif %}

  				{% if word['sense-gram'] %}
  				<!-- optional grammar -->
  				<span class="oald-sense-gram">
  						{# noun, adjective, etc  #}
  						[{{ word['sense-gram'] }}]
  				</span>
  				{% endif %}

  				{% if word['sense-labels'] %}
  				<!-- optional grammar -->
  				<span class="oald-sense-labels">
  						{# noun, adjective, etc  #}
  						{{ word['sense-labels'] }}
  				</span>
  				{% endif %}

  				{% if word['sense-cf'] %}
  				<!-- optional cf -->
  				<span class="oald-sensecf">
  						{{ word['sense-cf'] }}
  				</span>
  				{% endif %}

  				<span class="oald-sense-def">
  						{{ word['def'] }}
  				</span>
  			{# </section> #}
  			<!-- optional synonyms -->
  		</section>
		</section>
		
		{% if word['examples'] %}
		<!-- exmaples -->
		<section class="oald-example">
    	<ul>
    		{% for example in word['examples'] %}
    			<li>{{ example }}</li>
    		{% endfor %}
    	</ul>
  	</section>
  	{% endif %}

		{% if word['topics'] %}
  	<!-- optional topics section-->
  	<section class="oald-topics">
    		<span class="prefix">topics</span>
    		<span class="topic-name">{{word['topics']['topic']}}</span>
    		<span class="topic-cefr">{{word['topics']['level']}}</span>
    </section>
    {% endif %}

