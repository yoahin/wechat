		{% if word['col'] %}
    <!-- optional collocation -->
    <section class="oald-extra">
    	<section class="oald-extra-heading">
    		<span><span style="color: #F08B6E">Ⓦ</span> Collocations</span>
    	</section>
    	
    	<section class="oald-extra-cont">
    		<!-- one section -->
    		{% if word['col']['tip'] %}
    			<p>
    				{{ word['col']['tip'] }}
    			</p>
    		{% endif %}

    		{% for type, egs in word['col']['options'].items() %}
    			{% if type != 'empty' %}
    				<p class="oald-extra-col-cato">
    					{{ type }}
    				</p>
    				<p style="margin-top: 0; margin-bottom: .5rem">
    					<span class="oald-extra-dot">•</span><span>{{ egs | join('<span class="oald-extra-dot">•</span>') }}</span>
    				</p>
    			{% else %}
    				<p>
    					<span class="oald-extra-dot">•</span><span>{{ egs | join('<span class="oald-extra-dot">•</span>') }}</span>
    				</p>
    			{% endif %}
    		{% endfor %}
    		{# <!-- another section -->
    		<p class="oald-extra-col-cato">
    			verb + abuse
    		</p>
    		<p style="margin-top: 0; margin-bottom: .5rem">
    		<span class="oald-extra-dot">•</span>
    		<span>prevent</span>
    		<span class="oald-extra-dot">•</span>
    		<span>stop</span>
    		</p> #}
    	</section>
    </section>
    {% endif %}



    {% if word['extra-examples'] %}
    <!-- optional extra example -->
    <section class="oald-extra">
	    <section class="oald-extra-heading">
	      <span>
	      	<span style="color: #F08B6E">＋</span> Extra Examples
	      </span>
	    </section>
	    <section class="oald-extra-cont">
	   {# wechat list suuuuuuuucks! so using p tag #}
	    	{% for eg in word['extra-examples'] %}
					<p class="oald-extra-example">
		    		<span class="oald-extra-dot">•</span> {{ eg }}
		    	</p>
	    	{% endfor %}
	    </section>
	  </section>
	  {% endif %}

	  {% if word['origin'] %}
    <!-- word origin -->
	  <section class="oald-extra">
	    <section class="oald-extra-heading">
	      <span>
	      	<span style="color: #F08B6E">ⓞ</span> Word Origin
	      </span>
	    </section>
	    <section class="oald-extra-cont">
	    	<p>
	      {{ word['origin'] }}
	    	</p>
	    </section>
	  </section>
	  {% endif %}
  </section>
	{% endmacro %}
